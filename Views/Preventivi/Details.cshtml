@using Trasformazioni.Helpers
@model Trasformazioni.Models.ViewModels.PreventivoDetailsViewModel

@{
    ViewData["Title"] = "Dettaglio Preventivo";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Preventivi" asp-action="Index" asp-route-lottoId="@Model.LottoId">Preventivi</a></li>
            <li class="breadcrumb-item active" aria-current="page">Dettaglio</li>
        </ol>
    </nav>

    <!-- Container per Alert Validazione -->
    <div id="validationAlertContainer"></div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header con Badge Stato e Alert Scadenze -->
    <div class="row mb-4">
        <div class="col-md-10">
            <h2>
                <i class="bi bi-file-earmark-text text-primary me-2"></i>
                Dettaglio Preventivo
                <span class="@Model.StatoBadgeClass ms-2">@EnumHelper.GetDisplayName(Model.Stato)</span>
                @if (Model.IsSelezionato)
                {
                    <span class="badge bg-warning text-dark ms-2">
                        <i class="bi bi-star-fill me-1"></i>Selezionato
                    </span>
                }
            </h2>
            <p class="text-muted mb-0">@Model.Descrizione</p>
        </div>
        <div class="col-md-2 text-end">
            @if (Model.CanEdit)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>
                    Modifica
                </a>
            }
        </div>
    </div>

    <!-- Alert Scadenza -->
    @if (Model.IsScaduto)
    {
        <div class="alert alert-danger d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 2rem;"></i>
            <div>
                <strong>Preventivo Scaduto!</strong><br />
                Scadenza: @Model.DataScadenza.ToString("dd/MM/yyyy")
                @if (Model.HasAutoRinnovo)
                {
                    <span class="ms-2">(Auto-rinnovo ogni @Model.GiorniAutoRinnovo giorni)</span>
                }
            </div>
        </div>
    }
    else if (Model.IsInScadenza)
    {
        <div class="alert alert-warning d-flex align-items-center">
            <i class="bi bi-clock-fill me-3" style="font-size: 2rem;"></i>
            <div>
                <strong>Preventivo In Scadenza!</strong><br />
                Scadenza: @Model.DataScadenza.ToString("dd/MM/yyyy") 
                (@((Model.DataScadenza - DateTime.Today).Days) giorni rimanenti)
            </div>
        </div>
    }

    <div class="row">
        <!-- Colonna Sinistra -->
        <div class="col-md-6">
            
            <!-- Card Info Preventivo -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Informazioni Preventivo
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Descrizione:</dt>
                        <dd class="col-sm-7">@Model.Descrizione</dd>

                        <dt class="col-sm-5">Stato:</dt>
                        <dd class="col-sm-7">
                            <span class="@Model.StatoBadgeClass">
                                @EnumHelper.GetDisplayName(Model.Stato)
                            </span>
                        </dd>

                        <dt class="col-sm-5">Importo Offerto:</dt>
                        <dd class="col-sm-7">
                            @if (Model.ImportoOfferto.HasValue)
                            {
                                <strong class="text-primary">@Model.ImportoOfferto.Value.ToString("C2")</strong>
                            }
                            else
                            {
                                <span class="text-muted">Non specificato</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Data Richiesta:</dt>
                        <dd class="col-sm-7">@Model.DataRichiesta.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-5">Data Ricezione:</dt>
                        <dd class="col-sm-7">
                            @if (Model.DataRicezione.HasValue)
                            {
                                @Model.DataRicezione.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Non ancora ricevuto</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Data Scadenza:</dt>
                        <dd class="col-sm-7">
                            @Model.DataScadenza.ToString("dd/MM/yyyy")
                            @if (Model.IsScaduto)
                            {
                                <br /><span class="badge bg-danger">Scaduto</span>
                            }
                            else if (Model.IsInScadenza)
                            {
                                <br /><span class="badge bg-warning text-dark">In scadenza</span>
                            }
                        </dd>

                        @if (Model.HasAutoRinnovo)
                        {
                            <dt class="col-sm-5">Auto-Rinnovo:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-info">Attivo</span>
                                ogni @Model.GiorniAutoRinnovo giorni
                            </dd>
                        }

                        <dt class="col-sm-5">Selezionato:</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsSelezionato)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill me-1"></i>Sì
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No</span>
                            }
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <hr />
                        <h6 class="text-muted">Note:</h6>
                        <p class="mb-0">@Model.Note</p>
                    }
                </div>
            </div>

            <!-- Card Documento -->
            @if (Model.HasDocumento)
            {
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-file-earmark-pdf me-2"></i>
                            Documento Allegato
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@Model.NomeFile</h6>
                                <small class="text-muted">Documento preventivo allegato</small>
                            </div>
                            <div>
                                <a asp-action="DownloadDocumento" asp-route-id="@Model.Id" 
                                   class="btn btn-primary">
                                    <i class="bi bi-download me-1"></i>
                                    Scarica
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Card Lotto e Gara -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i>
                        Lotto e Gara di Riferimento
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Codice Lotto:</dt>
                        <dd class="col-sm-7">
                            <a asp-controller="Lotti" asp-action="Details" asp-route-id="@Model.LottoId">
                                @Model.CodiceLotto
                            </a>
                        </dd>

                        <dt class="col-sm-5">Descrizione Lotto:</dt>
                        <dd class="col-sm-7">@Model.DescrizioneLotto</dd>

                        <dt class="col-sm-5">Tipologia:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-secondary">@EnumHelper.GetDisplayName(Model.TipologiaLotto)</span>
                        </dd>

                        <dt class="col-sm-5">Stato Lotto:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">@EnumHelper.GetDisplayName(Model.StatoLotto)</span>
                        </dd>

                        @if (Model.ImportoBaseAstaLotto.HasValue)
                        {
                            <dt class="col-sm-5">Importo Base Asta:</dt>
                            <dd class="col-sm-7">
                                <strong>@Model.ImportoBaseAstaLotto.Value.ToString("C2")</strong>
                            </dd>
                        }

                        <dt class="col-sm-5 mt-2">Codice Gara:</dt>
                        <dd class="col-sm-7 mt-2">
                            <strong>@Model.CodiceGara</strong>
                        </dd>

                        <dt class="col-sm-5">Titolo Gara:</dt>
                        <dd class="col-sm-7">@Model.TitoloGara</dd>

                        @if (!string.IsNullOrEmpty(Model.EnteAppaltante))
                        {
                            <dt class="col-sm-5">Ente Appaltante:</dt>
                            <dd class="col-sm-7">@Model.EnteAppaltante</dd>
                        }
                    </dl>

                    <div class="mt-3">
                        <a asp-controller="Lotti" asp-action="Details" asp-route-id="@Model.LottoId" 
                           class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-arrow-right-circle me-1"></i>
                            Vai al Lotto
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonna Destra -->
        <div class="col-md-6">
            
            <!-- Card Fornitore -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-building me-2"></i>
                        Informazioni Fornitore
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Nome/Ragione Sociale:</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.NomeFornitore</strong>
                        </dd>

                        <dt class="col-sm-5">Tipo Soggetto:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-secondary">@Model.TipoSoggetto</span>
                        </dd>

                        @if (Model.NaturaGiuridica.HasValue)
                        {
                            <dt class="col-sm-5">Natura Giuridica:</dt>
                            <dd class="col-sm-7">@Model.NaturaGiuridica.Value</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.PartitaIVAFornitore))
                        {
                            <dt class="col-sm-5">Partita IVA:</dt>
                            <dd class="col-sm-7">@Model.PartitaIVAFornitore</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.CodiceFiscaleFornitore))
                        {
                            <dt class="col-sm-5">Codice Fiscale:</dt>
                            <dd class="col-sm-7">@Model.CodiceFiscaleFornitore</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.EmailFornitore))
                        {
                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7">
                                <a href="mailto:@Model.EmailFornitore">@Model.EmailFornitore</a>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.TelefonoFornitore))
                        {
                            <dt class="col-sm-5">Telefono:</dt>
                            <dd class="col-sm-7">
                                <a href="tel:@Model.TelefonoFornitore">@Model.TelefonoFornitore</a>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.IndirizzoFornitore))
                        {
                            <dt class="col-sm-5">Indirizzo:</dt>
                            <dd class="col-sm-7">@Model.IndirizzoFornitore</dd>
                        }
                    </dl>

                    <div class="mt-3">
                        <a asp-controller="Soggetti" asp-action="Details" asp-route-id="@Model.SoggettoId" 
                           class="btn btn-sm btn-outline-success">
                            <i class="bi bi-arrow-right-circle me-1"></i>
                            Vai al Fornitore
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card Audit Trail -->
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title text-muted">
                        <i class="bi bi-clock-history me-2"></i>
                        Informazioni di Sistema
                    </h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Creato il:</dt>
                        <dd class="col-sm-7">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            @if (!string.IsNullOrEmpty(Model.CreatedBy))
                            {
                                <br /><small class="text-muted">da @Model.CreatedBy</small>
                            }
                        </dd>

                        @if (Model.ModifiedAt.HasValue)
                        {
                            <dt class="col-sm-5">Ultima modifica:</dt>
                            <dd class="col-sm-7">
                                @Model.ModifiedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                @if (!string.IsNullOrEmpty(Model.ModifiedBy))
                                {
                                    <br /><small class="text-muted">da @Model.ModifiedBy</small>
                                }
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Azioni in Basso -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between">
                <div>
                    <a asp-action="Index" asp-route-lottoId="@Model.LottoId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Torna alla Lista
                    </a>
                </div>
                <div>
                    @if (Model.CanEdit)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>
                            Modifica
                        </a>
                    }
                    <button type="button" class="btn btn-danger" id="btnDelete">
                        <i class="bi bi-trash me-1"></i>
                        Elimina
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // FUNZIONE HELPER ALERT
            function showValidationAlert(message, type = 'danger') {
                // Crea alert con ID univoco per stack verticale
                const alertId = 'alert-' + Date.now();
                const alertHtml = `
                    <div id="${alertId}" class="alert alert-${type} alert-dismissible fade show mb-2" role="alert">
                        <i class="bi bi-${type === 'danger' ? 'exclamation-triangle' : 'check-circle'}-fill me-2"></i>
                        <strong>${type === 'danger' ? 'Errore!' : type === 'warning' ? 'Attenzione!' : 'Successo!'}</strong> ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;

                $('#validationAlertContainer').append(alertHtml);

                // Scroll alla top per vedere alert
                $('html, body').animate({ scrollTop: 0 }, 300);

                // Auto-hide dopo 8 secondi
                setTimeout(function() {
                    $('#validationAlertContainer .alert').fadeOut('slow', function() {
                        $(this).remove();
                    });
                }, 6000);
            }

            // Elimina Preventivo
            $('#btnDelete').click(function () {
                if (!confirm('Sei sicuro di voler eliminare questo preventivo?\n\nQuesta operazione non può essere annullata.')) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Delete", new { id = Model.Id })',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        if (result.success) {
                            // toastr.success('Preventivo eliminato con successo');
                            window.location.href = result.redirectUrl;
                        } else {
                            // toastr.error(result.message);
                            setTimeout(function() {
                                showValidationAlert(
                                    result.message,
                                    'danger'
                                );
                            }, 300);
                        }
                    },
                    error: function () {
                        // toastr.error('Errore nell\'eliminazione del preventivo');
                        setTimeout(function() {
                            showValidationAlert(
                                result.message,
                                'danger'
                            );
                        }, 300);
                    }
                });
            });
        });
    </script>
}
