@model Trasformazioni.Models.ViewModels.RepartoCreateViewModel
@{
    ViewData["Title"] = "Nuovo Reparto";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Reparti</a></li>
            <li class="breadcrumb-item active">Nuovo</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle me-2"></i>Nuovo Reparto
            </h1>
            <p class="text-muted mb-0">Inserisci i dati del nuovo reparto</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- Nome -->
                            <div class="col-md-6">
                                <label asp-for="Nome" class="form-label">
                                    Nome <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Nome" class="form-control" placeholder="Es. Amministrazione" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">
                                    Email <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" type="email"
                                           placeholder="Es. amministrazione@azienda.it" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Descrizione -->
                            <div class="col-12">
                                <label asp-for="Descrizione" class="form-label">Descrizione</label>
                                <textarea asp-for="Descrizione" class="form-control" rows="3"
                                          placeholder="Descrizione opzionale del reparto..."></textarea>
                                <span asp-validation-for="Descrizione" class="text-danger"></span>
                                <small class="form-text text-muted">Massimo 500 caratteri</small>
                            </div>
                        </div>

                        <!-- Pulsanti -->
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>Annulla
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Crea Reparto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Info laterale -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Informazioni
                    </h6>
                    <p class="card-text small text-muted">
                        I reparti permettono di organizzare gli utenti in gruppi logici.
                        Ogni reparto può avere una propria email di riferimento per le comunicazioni.
                    </p>
                    <hr>
                    <p class="card-text small text-muted mb-0">
                        <i class="bi bi-asterisk text-danger me-1"></i>
                        I campi contrassegnati sono obbligatori
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}