@model Trasformazioni.Models.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "Il Mio Profilo";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-7">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 fw-bold mb-1">Il Mio Profilo</h1>
                    <p class="text-muted mb-0">Visualizza le tue informazioni personali</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-controller="Profile" class="btn btn-primary">
                        Modifica Profilo
                    </a>
                </div>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Profile Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Informazioni Personali</h5>

                    <div class="row g-3">
                        <!-- Nome Completo -->
                        <div class="col-12">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Nome Completo</label>
                                <p class="mb-0 fw-semibold">@Model.NomeCompleto</p>
                            </div>
                        </div>

                        <!-- Nome -->
                        <div class="col-md-6">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Nome</label>
                                <p class="mb-0">@Model.Nome</p>
                            </div>
                        </div>

                        <!-- Cognome -->
                        <div class="col-md-6">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Cognome</label>
                                <p class="mb-0">@Model.Cognome</p>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-12">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Email</label>
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        </div>

                        <!-- Telefono -->
                        <div class="col-md-6">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Telefono</label>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        @Model.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificato</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- Reparto -->
                        <div class="col-md-6">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Reparto</label>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.RepartoNome))
                                    {
                                        @Model.RepartoNome
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificato</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <!-- Data Assunzione -->
                        <div class="col-12">
                            <div class="pb-3 border-bottom">
                                <label class="form-label text-muted small mb-1">Data Assunzione</label>
                                <p class="mb-0">@Model.DataAssunzione.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-3">Sicurezza</h5>
                    <p class="text-muted mb-3">Gestisci le impostazioni di sicurezza del tuo account</p>

                    <a asp-action="ChangePassword" asp-controller="Profile" class="btn btn-outline-primary">
                        Cambia Password
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>