@model Trasformazioni.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Cambia Password";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-5">

            <!-- Header -->
            <div class="mb-4">
                <h1 class="h3 fw-bold mb-1">Cambia Password</h1>
                <p class="text-muted mb-0">Aggiorna la tua password per mantenere l'account sicuro</p>
            </div>

            <!-- Form Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" asp-controller="Profile" method="post">

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Password Corrente -->
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-semibold">Password Corrente</label>
                            <input asp-for="CurrentPassword"
                                   class="form-control"
                                   placeholder="Inserisci la password attuale"
                                   autocomplete="current-password"
                                   autofocus />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <!-- Nuova Password -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold">Nuova Password</label>
                            <input asp-for="NewPassword"
                                   class="form-control"
                                   placeholder="Inserisci la nuova password"
                                   autocomplete="new-password" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <!-- Conferma Password -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Conferma Nuova Password</label>
                            <input asp-for="ConfirmPassword"
                                   class="form-control"
                                   placeholder="Ripeti la nuova password"
                                   autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Password Requirements -->
                        <div class="alert alert-light border mb-4" role="alert">
                            <p class="fw-semibold mb-2 small">Requisiti Password:</p>
                            <ul class="mb-0 small ps-3">
                                <li>Minimo 8 caratteri</li>
                                <li>Almeno una lettera maiuscola</li>
                                <li>Almeno una lettera minuscola</li>
                                <li>Almeno un numero</li>
                            </ul>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" asp-controller="Profile" class="btn btn-outline-secondary">
                                Annulla
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Cambia Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="card border-0 bg-light mt-3">
                <div class="card-body p-3">
                    <h6 class="fw-semibold mb-2 small">Suggerimenti per la sicurezza</h6>
                    <ul class="mb-0 small text-muted ps-3">
                        <li>Non riutilizzare password di altri servizi</li>
                        <li>Usa una combinazione di lettere, numeri e simboli</li>
                        <li>Cambia la password regolarmente</li>
                        <li>Non condividere mai la tua password</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}