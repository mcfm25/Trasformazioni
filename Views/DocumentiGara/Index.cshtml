@section Scripts {
    <script>
        $(document).ready(function () {

            // FUNZIONE HELPER ALERT
            function showValidationAlert(message, type = 'danger') {
                // Crea alert con ID univoco per stack verticale
                const alertId = 'alert-' + Date.now();
                const alertHtml = `
                    <div id="${alertId}" class="alert alert-${type} alert-dismissible fade show mb-2" role="alert">
                        <i class="bi bi-${type === 'danger' ? 'exclamation-triangle' : 'check-circle'}-fill me-2"></i>
                        <strong>${type === 'danger' ? 'Errore!' : type === 'warning' ? 'Attenzione!' : 'Successo!'}</strong> ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;

                $('#validationAlertContainer').append(alertHtml);

                // Scroll alla top per vedere alert
                $('html, body').animate({ scrollTop: 0 }, 300);

                // Auto-hide dopo 8 secondi
                setTimeout(function() {
                    $('#validationAlertContainer .alert').fadeOut('slow', function() {
                        $(this).remove();
                    });
                }, 6000);
            }

            // Elimina Documento (AJAX con conferma)
            $('.btn-delete').click(function () {
                var button = $(this);
                var documentoId = button.data('id');
                var garaId = button.data('gara-id');
                var lottoId = button.data('lotto-id');

                if (!confirm('Sei sicuro di voler eliminare questo documento?\n\nIl file rimarrà su MinIO ma non sarà più accessibile dall\'applicazione.')) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Delete", "DocumentiGara")',
                    type: 'POST',
                    data: {
                        id: documentoId,
                        garaId: garaId,
                        lottoId: lottoId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        if (result.success) {
                            // toastr.success('Documento eliminato con successo');
                            window.location.href = result.redirectUrl;
                        } else {
                            // toastr.error(result.message);
                            setTimeout(function() {
                                showValidationAlert(
                                    result.message,
                                    'danger'
                                );
                            }, 300);
                        }
                    },
                    error: function () {
                        // toastr.error('Errore nell\'eliminazione del documento');
                        setTimeout(function() {
                            showValidationAlert(
                                result.message,
                                'danger'
                            );
                        }, 300);
                    }
                });
            });

            // Refresh lotti quando cambia gara (filtro dipendente)
            $('#garaSelect').change(function() {
                var garaId = $(this).val();
                
                if (!garaId) {
                    $('#lottoSelect').html('<option value="">Tutti i lotti</option>');
                    return;
                }

                // Carica lotti per la gara selezionata
                $.ajax({
                    url: '@Url.Action("GetLottiByGara", "DocumentiGara")',
                    type: 'GET',
                    data: { garaId: garaId },
                    success: function(lotti) {
                        var options = '<option value="">Tutti i lotti</option>';
                        lotti.forEach(function(lotto) {
                            options += '<option value="' + lotto.id + '">' + lotto.codiceLotto + ' - ' + lotto.descrizione + '</option>';
                        });
                        $('#lottoSelect').html(options);
                    },
                    error: function() {
                        console.error('Errore nel caricamento dei lotti');
                    }
                });
            });
        });
    </script>
}
