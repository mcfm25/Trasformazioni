                        <label class="form-label">Lotto</label>
                        <select name="LottoId" id="lottoSelect" class="form-select">
                            <option value="">Tutti i lotti</option>
                            @if (ViewBag.Lotti != null)
                            {
                                @foreach (var item in (List<SelectListItem>)ViewBag.Lotti)
                                {
                                    <option value="@item.Value" selected="@item.Selected">
                                        @item.Text
                                    </option>
                                }
                            }
                        </select>
                    </div>

