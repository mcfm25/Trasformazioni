            @if (gara != null)
            {
                <p class="text-muted mb-0">
                    Gara: <strong>@gara.CodiceGara</strong> - @gara.Titolo
                    @if (lotto != null)
                    {
                        <span class="ms-2">| Lotto: <strong>@lotto.CodiceLotto</strong></span>
                    }
                </p>
            }
        </div>
        <div class="col-md-2 text-end">
