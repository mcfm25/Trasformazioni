@model IEnumerable<Trasformazioni.Models.ViewModels.DocumentoGara.DocumentoGaraListViewModel>

@{
    ViewData["Title"] = "Documenti Gara";
    var gara = ViewBag.Gara as Trasformazioni.Models.ViewModels.GaraDetailsViewModel;
    var lotto = ViewBag.Lotto as Trasformazioni.Models.ViewModels.LottoDetailsViewModel;
    var filters = ViewBag.Filters as Trasformazioni.Models.ViewModels.DocumentoGara.DocumentoGaraFilterViewModel;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            @if (gara != null)
            {
                <li class="breadcrumb-item"><a asp-controller="Gare" asp-action="Index">Gare</a></li>
                <li class="breadcrumb-item">
                    <a asp-controller="Gare" asp-action="Details" asp-route-id="@gara.Id">@gara.CodiceGara</a>
                </li>
                @if (lotto != null)
                {
                    <li class="breadcrumb-item">
                        <a asp-controller="Lotti" asp-action="Details" asp-route-id="@lotto.Id">@lotto.CodiceLotto</a>
                    </li>
                }
            }
            <li class="breadcrumb-item active" aria-current="page">Documenti</li>
        </ol>
    </nav>

