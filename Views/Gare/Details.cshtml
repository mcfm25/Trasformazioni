@section Scripts {
    <script>
        function cambiaStato(garaId, nuovoStato) {
            if (!confirm('Sei sicuro di voler cambiare lo stato della gara?')) {
                return;
            }

            // Token antiforgery
            const token = $('input[name="__RequestVerificationToken"]').val();

            // Disabilita tutti i pulsanti durante la richiesta
            $('button').prop('disabled', true);

            $.ajax({
                url: `/Gare/CambiaStato/${garaId}`,
                type: 'POST',
                headers: {
                    'RequestVerificationToken': token
                },
                data: {
                    nuovoStato: nuovoStato,
                    __RequestVerificationToken: token
                },
                success: function(response) {
                    if (response.success) {
                        // Mostra messaggio di successo
                        window.location.reload();
                    } else {
                        alert(response.message || 'Errore durante il cambio stato');
                        $('button').prop('disabled', false);
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error:', error);
                    alert('Errore durante il cambio stato della gara');
                    $('button').prop('disabled', false);
                }
            });
        }
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
