@model Trasformazioni.Models.ViewModels.ConfigurazioneNotificaEmailEditViewModel
@{
    ViewData["Title"] = "Modifica Configurazione";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Notifiche Email</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Codice</a></li>
            <li class="breadcrumb-item active">Modifica</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-pencil me-2"></i>Modifica Configurazione
            </h1>
            <p class="text-muted mb-0">@Model.Codice</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Codice" />
                        <input type="hidden" asp-for="Modulo" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- Codice (readonly) -->
                            <div class="col-md-6">
                                <label class="form-label">Codice</label>
                                <input type="text" class="form-control" value="@Model.Codice" readonly disabled />
                                <small class="form-text text-muted">Il codice non può essere modificato</small>
                            </div>

                            <!-- Modulo (readonly) -->
                            <div class="col-md-6">
                                <label class="form-label">Modulo</label>
                                <input type="text" class="form-control" value="@Model.Modulo" readonly disabled />
                                <small class="form-text text-muted">Il modulo non può essere modificato</small>
                            </div>

                            <!-- Descrizione -->
                            <div class="col-12">
                                <label asp-for="Descrizione" class="form-label">
                                    Descrizione <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Descrizione" class="form-control" />
                                <span asp-validation-for="Descrizione" class="text-danger"></span>
                            </div>

                            <!-- Oggetto Email Default -->
                            <div class="col-12">
                                <label asp-for="OggettoEmailDefault" class="form-label">Oggetto Email Default</label>
                                <input asp-for="OggettoEmailDefault" class="form-control" />
                                <span asp-validation-for="OggettoEmailDefault" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Puoi usare placeholder come {NumeroProtocollo}, {Oggetto}, {Targa}
                                </small>
                            </div>

                            <!-- IsAttiva -->
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input asp-for="IsAttiva" class="form-check-input" />
                                    <label asp-for="IsAttiva" class="form-check-label">
                                        Notifica attiva
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    Se disattivata, le notifiche per questa operazione non verranno inviate
                                </small>
                            </div>

                            <!-- Note -->
                            <div class="col-12">
                                <label asp-for="Note" class="form-label">Note</label>
                                <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Pulsanti -->
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>Annulla
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Salva Modifiche
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Info laterale -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Informazioni
                    </h6>
                    <p class="card-text small text-muted">
                        Modifica le impostazioni della notifica. Il codice e il modulo non possono essere modificati.
                    </p>
                    <hr>
                    <h6 class="card-subtitle mb-2">Placeholder disponibili:</h6>
                    <ul class="list-unstyled small text-muted mb-0">
                        <li><code>{NumeroProtocollo}</code> - Numero protocollo</li>
                        <li><code>{Oggetto}</code> - Oggetto/descrizione</li>
                        <li><code>{Targa}</code> - Targa mezzo</li>
                        <li><code>{Numero}</code> - Numero documento</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}