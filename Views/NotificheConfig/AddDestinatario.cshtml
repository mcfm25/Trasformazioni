@model Trasformazioni.Models.ViewModels.DestinatarioNotificaEmailCreateViewModel
@using Trasformazioni.Models.Enums

@{
    ViewData["Title"] = "Aggiungi Destinatario";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Notifiche Email</a></li>
            <li class="breadcrumb-item">
                <a asp-action="Details" asp-route-id="@Model.ConfigurazioneNotificaEmailId">
                    @ViewBag.ConfigurazioneCodice
                </a>
            </li>
            <li class="breadcrumb-item active">Aggiungi Destinatario</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-person-plus me-2"></i>Aggiungi Destinatario
            </h1>
            <p class="text-muted mb-0">@ViewBag.ConfigurazioneDescrizione</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="AddDestinatario" method="post">
                        <input type="hidden" asp-for="ConfigurazioneNotificaEmailId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- Tipo -->
                            <div class="col-12">
                                <label asp-for="Tipo" class="form-label">
                                    Tipo Destinatario <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Tipo" class="form-select" id="tipoSelect">
                                    <option value="@((int)TipoDestinatarioNotifica.Reparto)">
                                        Reparto (email del reparto)
                                    </option>
                                    <option value="@((int)TipoDestinatarioNotifica.Ruolo)">
                                        Ruolo (tutti gli utenti con il ruolo)
                                    </option>
                                    <option value="@((int)TipoDestinatarioNotifica.Utente)">
                                        Utente (utente specifico)
                                    </option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>

                            <!-- Reparto -->
                            <div class="col-12" id="repartoGroup">
                                <label asp-for="RepartoId" class="form-label">
                                    Reparto <span class="text-danger">*</span>
                                </label>
                                <select asp-for="RepartoId" asp-items="Model.RepartiSelectList" class="form-select">
                                    <option value="">-- Seleziona Reparto --</option>
                                </select>
                                <span asp-validation-for="RepartoId" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>Verrà usata l'email del reparto selezionato
                                </small>
                            </div>

                            <!-- Ruolo -->
                            <div class="col-12" id="ruoloGroup" style="display: none;">
                                <label asp-for="Ruolo" class="form-label">
                                    Ruolo <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Ruolo" asp-items="Model.RuoliSelectList" class="form-select">
                                    <option value="">-- Seleziona Ruolo --</option>
                                </select>
                                <span asp-validation-for="Ruolo" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>Tutti gli utenti attivi con questo ruolo riceveranno la notifica
                                </small>
                            </div>

                            <!-- Utente -->
                            <div class="col-12" id="utenteGroup" style="display: none;">
                                <label asp-for="UtenteId" class="form-label">
                                    Utente <span class="text-danger">*</span>
                                </label>
                                <select asp-for="UtenteId" asp-items="Model.UtentiSelectList" class="form-select">
                                    <option value="">-- Seleziona Utente --</option>
                                </select>
                                <span asp-validation-for="UtenteId" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>L'utente selezionato riceverà la notifica
                                </small>
                            </div>

                            <!-- Note -->
                            <div class="col-12">
                                <label asp-for="Note" class="form-label">Note</label>
                                <input asp-for="Note" class="form-control" placeholder="Es. Responsabile progetto" />
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Pulsanti -->
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Details" asp-route-id="@Model.ConfigurazioneNotificaEmailId"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>Annulla
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-lg me-1"></i>Aggiungi Destinatario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Info laterale -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Tipi di Destinatario
                    </h6>

                    <div class="mb-3">
                        <span class="badge bg-info"><i class="bi bi-building me-1"></i>Reparto</span>
                        <p class="small text-muted mt-1 mb-0">
                            Invia all'email configurata per il reparto (1 email).
                        </p>
                    </div>

                    <div class="mb-3">
                        <span class="badge bg-warning text-dark"><i class="bi bi-shield me-1"></i>Ruolo</span>
                        <p class="small text-muted mt-1 mb-0">
                            Invia a tutti gli utenti attivi che hanno il ruolo selezionato (N email).
                        </p>
                    </div>

                    <div>
                        <span class="badge bg-primary"><i class="bi bi-person me-1"></i>Utente</span>
                        <p class="small text-muted mt-1 mb-0">
                            Invia all'email dell'utente specifico selezionato (1 email).
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tipoSelect = document.getElementById('tipoSelect');
            const repartoGroup = document.getElementById('repartoGroup');
            const ruoloGroup = document.getElementById('ruoloGroup');
            const utenteGroup = document.getElementById('utenteGroup');

            function updateVisibility() {
                const tipo = tipoSelect.value;

                repartoGroup.style.display = (tipo === '0') ? 'block' : 'none';
                ruoloGroup.style.display = (tipo === '1') ? 'block' : 'none';
                utenteGroup.style.display = (tipo === '2') ? 'block' : 'none';
            }

            tipoSelect.addEventListener('change', updateVisibility);
            updateVisibility(); // Initial state
        });
    </script>
}