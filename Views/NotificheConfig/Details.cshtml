@model Trasformazioni.Models.ViewModels.ConfigurazioneNotificaEmailDetailsViewModel
@{
    ViewData["Title"] = $"Notifica - {Model.Descrizione}";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Notifiche Email</a></li>
            <li class="breadcrumb-item active">@Model.Descrizione</li>
        </ol>
    </nav>

    <!-- Messaggi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Chiudi"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Chiudi"></button>
        </div>
    }

    <div class="row">
        <!-- Colonna principale -->
        <div class="col-lg-8">
            <!-- Info Configurazione -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-envelope me-2"></i>@Model.Descrizione
                    </h5>
                    <div class="btn-group btn-group-sm">
                        <form asp-action="ToggleAttiva" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="returnUrl" value="@Url.Action("Details", new { id = Model.Id })" />
                            <button type="submit" class="btn @(Model.IsAttiva ? "btn-success" : "btn-secondary")">
                                <i class="bi @(Model.IsAttiva ? "bi-toggle-on" : "bi-toggle-off") me-1"></i>
                                @(Model.IsAttiva ? "Attiva" : "Disattivata")
                            </button>
                        </form>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-1"></i>Modifica
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Codice</label>
                            <p class="mb-0"><code>@Model.Codice</code></p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Modulo</label>
                            <p class="mb-0">
                                <span class="badge bg-info">@Model.Modulo</span>
                            </p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted small">Oggetto Email Default</label>
                            <p class="mb-0">@(Model.OggettoEmailDefault ?? "-")</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Note))
                        {
                            <div class="col-12">
                                <label class="form-label text-muted small">Note</label>
                                <p class="mb-0 text-muted">@Model.Note</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Destinatari -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-people me-2"></i>Destinatari
                        <span class="badge bg-secondary ms-2">@Model.DestinatariCount</span>
                    </h5>
                    <a asp-action="AddDestinatario" asp-route-configurazioneId="@Model.Id"
                       class="btn btn-sm btn-success">
                        <i class="bi bi-plus-lg me-1"></i>Aggiungi
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.Destinatari.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 120px;">Tipo</th>
                                        <th>Destinatario</th>
                                        <th>Note</th>
                                        <th class="text-end" style="width: 80px;">Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var dest in Model.Destinatari)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge @dest.BadgeClass">
                                                    <i class="bi @dest.Icona me-1"></i>@dest.TipoDescrizione
                                                </span>
                                            </td>
                                            <td>
                                                <span class="fw-semibold">@dest.Descrizione</span>
                                            </td>
                                            <td class="text-muted small">
                                                @(dest.Note ?? "-")
                                            </td>
                                            <td class="text-end">
                                                <form asp-action="RemoveDestinatario" method="post" class="d-inline"
                                                      onsubmit="return confirm('Sei sicuro di voler rimuovere questo destinatario?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@dest.Id" />
                                                    <input type="hidden" name="configurazioneId" value="@Model.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Rimuovi">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-person-x display-6 text-muted"></i>
                            <p class="text-muted mt-2 mb-0">Nessun destinatario configurato</p>
                            <p class="text-muted small">Le notifiche non verranno inviate finché non aggiungi almeno un destinatario.</p>
                            <a asp-action="AddDestinatario" asp-route-configurazioneId="@Model.Id"
                               class="btn btn-success mt-2">
                                <i class="bi bi-plus-lg me-1"></i>Aggiungi Destinatario
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Colonna laterale -->
        <div class="col-lg-4">
            <!-- Stato -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Stato
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.IsAttiva && Model.DestinatariCount > 0)
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle me-2"></i>
                            <strong>Operativa</strong><br />
                            <small>Le notifiche verranno inviate a @Model.DestinatariCount destinatari.</small>
                        </div>
                    }
                    else if (Model.IsAttiva && Model.DestinatariCount == 0)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Attiva ma senza destinatari</strong><br />
                            <small>Aggiungi almeno un destinatario per inviare le notifiche.</small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary mb-0">
                            <i class="bi bi-pause-circle me-2"></i>
                            <strong>Disattivata</strong><br />
                            <small>Le notifiche per questa operazione non verranno inviate.</small>
                        </div>
                    }
                </div>
            </div>

            <!-- Audit -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h6 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Audit
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 small">
                        <li class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Creato il</span>
                            <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                        </li>
                        <li class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Creato da</span>
                            <span>@(string.IsNullOrEmpty(Model.CreatedBy) ? "-" : Model.CreatedBy)</span>
                        </li>
                        @if (Model.ModifiedAt.HasValue)
                        {
                            <li class="d-flex justify-content-between py-2 border-bottom">
                                <span class="text-muted">Modificato il</span>
                                <span>@Model.ModifiedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                            </li>
                            <li class="d-flex justify-content-between py-2">
                                <span class="text-muted">Modificato da</span>
                                <span>@(string.IsNullOrEmpty(Model.ModifiedBy) ? "-" : Model.ModifiedBy)</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Pulsante Indietro -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Torna all'elenco
        </a>
    </div>
</div>