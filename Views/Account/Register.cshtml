@model Trasformazioni.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registrazione";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100 py-5">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h1 class="h3 fw-bold mb-2">Crea Account</h1>
                        <p class="text-muted mb-0">Compila i campi per registrarti</p>
                    </div>

                    <!-- Form -->
                    <form asp-action="Register" asp-controller="Account" method="post">

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nome e Cognome -->
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="Nome" class="form-label fw-semibold">Nome</label>
                                <input asp-for="Nome"
                                       class="form-control"
                                       placeholder="Mario"
                                       autocomplete="given-name"
                                       autofocus />
                                <span asp-validation-for="Nome" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Cognome" class="form-label fw-semibold">Cognome</label>
                                <input asp-for="Cognome"
                                       class="form-control"
                                       placeholder="Rossi"
                                       autocomplete="family-name" />
                                <span asp-validation-for="Cognome" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="nome@esempio.it"
                                   autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Reparto -->
                        <div class="mb-3">
@*                             <label asp-for="Reparto" class="form-label fw-semibold">Reparto</label>
                            <input asp-for="Reparto"
                                   class="form-control"
                                   placeholder="Es: Amministrazione"
                                   autocomplete="organization-title" />
                            <span asp-validation-for="Reparto" class="text-danger small"></span> *@
                            <label asp-for="RepartoId" class="form-label">Reparto</label>
                            <select asp-for="RepartoId" asp-items="Model.RepartiSelectList" class="form-select">
                                <option value="">-- Seleziona Reparto --</option>
                            </select>
                            <span asp-validation-for="RepartoId" class="text-danger"></span>
                        </div>

                        <!-- Data Assunzione -->
                        <div class="mb-3">
                            <label asp-for="DataAssunzione" class="form-label fw-semibold">Data Assunzione</label>
                            <input asp-for="DataAssunzione"
                                   class="form-control"
                                   type="date" />
                            <span asp-validation-for="DataAssunzione" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Password</label>
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="Minimo 8 caratteri"
                                   autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <div class="form-text small">
                                La password deve contenere almeno 8 caratteri, una maiuscola, una minuscola e un numero.
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Conferma Password</label>
                            <input asp-for="ConfirmPassword"
                                   class="form-control"
                                   placeholder="Ripeti la password"
                                   autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Registrati
                            </button>
                        </div>
                    </form>

                    <!-- Divider -->
                    <hr class="my-4">

                    <!-- Login Link -->
                    <div class="text-center">
                        <p class="mb-0 text-muted small">
                            Hai già un account?
                            <a asp-action="Login" asp-controller="Account" class="text-decoration-none fw-semibold">
                                Accedi
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}