@model Trasformazioni.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recupero Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h4 class="mb-0">
                        <i class="bi bi-key me-2"></i>Recupero Password
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Inserisci l'indirizzo email associato al tuo account. 
                        Ti invieremo un link per reimpostare la password.
                    </p>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-1"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   placeholder="Inserisci la tua email" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i>Invia Link di Reset
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i>Torna al Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
