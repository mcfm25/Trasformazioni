@model IEnumerable<Trasformazioni.Models.ViewModels.TipoDocumentoListViewModel>
@using Trasformazioni.Models.Enums
@using Trasformazioni.Mappings

@{
    ViewData["Title"] = "Gestione Tipi Documento";
    var countByArea = ViewBag.CountByArea as Dictionary<AreaDocumento, int> ?? new Dictionary<AreaDocumento, int>();
    var statistiche = ViewBag.Statistiche as Dictionary<string, int> ?? new Dictionary<string, int>();
    var areaFiltro = ViewBag.AreaFiltro as AreaDocumento?;
    var soloSistemaFiltro = ViewBag.SoloSistemaFiltro as bool?;
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door"></i> Home
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="bi bi-file-earmark-text"></i> Tipi Documento
        </li>
    </ol>
</nav>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-file-earmark-text"></i> Gestione Tipi Documento
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuovo Tipo
    </a>
</div>

<div class="row">
    <!-- Sidebar Filtri (3 col) -->
    <div class="col-lg-3 mb-4">
        <!-- Statistiche -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Statistiche</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Totale:</span>
                    <strong>@statistiche.GetValueOrDefault("Totale", 0)</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Di Sistema:</span>
                    <span class="badge bg-secondary">@statistiche.GetValueOrDefault("DiSistema", 0)</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Personalizzati:</span>
                    <span class="badge bg-info">@statistiche.GetValueOrDefault("Personalizzati", 0)</span>
                </div>
            </div>
        </div>

        <!-- Filtro per Area -->
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-funnel"></i> Filtra per Area</h6>
            </div>
            <div class="list-group list-group-flush">
                <a asp-action="Index" 
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(areaFiltro == null && soloSistemaFiltro == null ? "active" : "")">
                    <span><i class="bi bi-grid"></i> Tutte le Aree</span>
                    <span class="badge bg-secondary">@Model.Count()</span>
                </a>
                @foreach (AreaDocumento area in Enum.GetValues(typeof(AreaDocumento)))
                {
                    var count = countByArea.GetValueOrDefault(area, 0);
                    var isActive = areaFiltro == area;
                    <a asp-action="Index" asp-route-area="@((int)area)"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(isActive ? "active" : "")">
                        <span>
                            <i class="bi @TipoDocumentoMappingExtensions.GetAreaIcon(area)"></i>
                            @TipoDocumentoMappingExtensions.GetAreaDisplayName(area)
                        </span>
                        <span class="badge @TipoDocumentoMappingExtensions.GetAreaBadgeClass(area)">@count</span>
                    </a>
                }
            </div>
        </div>

        <!-- Filtro Sistema/Personalizzati -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-filter"></i> Tipo</h6>
            </div>
            <div class="list-group list-group-flush">
                <a asp-action="Index" asp-route-area="@areaFiltro" asp-route-soloSistema=""
                   class="list-group-item list-group-item-action @(soloSistemaFiltro == null ? "active" : "")">
                    Tutti
                </a>
                <a asp-action="Index" asp-route-area="@areaFiltro" asp-route-soloSistema="true"
                   class="list-group-item list-group-item-action @(soloSistemaFiltro == true ? "active" : "")">
                    <i class="bi bi-lock"></i> Solo di Sistema
                </a>
                <a asp-action="Index" asp-route-area="@areaFiltro" asp-route-soloSistema="false"
                   class="list-group-item list-group-item-action @(soloSistemaFiltro == false ? "active" : "")">
                    <i class="bi bi-person"></i> Solo Personalizzati
                </a>
            </div>
        </div>
    </div>

    <!-- Contenuto Principale (9 col) -->
    <div class="col-lg-9">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                @if (areaFiltro.HasValue)
                {
                    <span>Nessun tipo documento trovato per l'area <strong>@areaFiltro</strong>.</span>
                }
                else
                {
                    <span>Nessun tipo documento configurato.</span>
                }
                <a asp-action="Create" asp-route-area="@areaFiltro" class="alert-link">Crea il primo tipo documento</a>
            </div>
        }
        else
        {
            <!-- Raggruppamento per Area -->
            @foreach (var gruppo in Model.GroupBy(t => t.Area).OrderBy(g => g.Key))
            {
                <div class="card mb-3">
                    <div class="card-header @TipoDocumentoMappingExtensions.GetAreaBadgeClass(gruppo.Key) text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">
                                <i class="bi @TipoDocumentoMappingExtensions.GetAreaIcon(gruppo.Key)"></i>
                                @TipoDocumentoMappingExtensions.GetAreaDisplayName(gruppo.Key)
                                <span class="badge bg-light text-dark ms-2">@gruppo.Count()</span>
                            </h6>
                            <a asp-action="Create" asp-route-area="@((int)gruppo.Key)" 
                               class="btn btn-sm btn-light">
                                <i class="bi bi-plus"></i> Aggiungi
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome</th>
                                    <th>Descrizione</th>
                                    <th class="text-center" style="width: 100px;">Tipo</th>
                                    <th class="text-center" style="width: 100px;">Documenti</th>
                                    <th class="text-center" style="width: 120px;">Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tipo in gruppo.OrderBy(t => t.Nome))
                                {
                                    <tr>
                                        <td>
                                            <strong>@tipo.Nome</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(tipo.Descrizione))
                                            {
                                                <small class="text-muted">
                                                    @(tipo.Descrizione.Length > 80 ? tipo.Descrizione.Substring(0, 80) + "..." : tipo.Descrizione)
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-muted fst-italic">Nessuna descrizione</small>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (tipo.IsSystem)
                                            {
                                                <span class="badge bg-secondary" title="Tipo di sistema - Non eliminabile">
                                                    <i class="bi bi-lock"></i> Sistema
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-person"></i> Custom
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (tipo.NumeroDocumenti > 0)
                                            {
                                                <span class="badge bg-primary">@tipo.NumeroDocumenti</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">0</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@tipo.Id" 
                                                   class="btn btn-outline-info" title="Dettagli">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@tipo.Id" 
                                                   class="btn btn-outline-warning" title="Modifica">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                @if (!tipo.IsSystem && tipo.NumeroDocumenti == 0)
                                                {
                                                    <a asp-action="Delete" asp-route-id="@tipo.Id" 
                                                       class="btn btn-outline-danger" title="Elimina">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Styles {
    <style>
        .list-group-item.active {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}
